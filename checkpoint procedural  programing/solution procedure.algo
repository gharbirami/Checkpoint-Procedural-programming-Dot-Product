PROCEDURE dot_product(v1,v2 : ARRAY_OF INTEGER, VAR dot : INTEGER)
VAR
    i : INTEGER;
BEGIN
    dot :=0;
    i:=0;
    IF (v1.length <> v2.length) THEN
        Write("impossible de multiplier deux vecteurs de diffirent taille");
        dot := NaN; 
    END_IF
    WHILE (i <v1.length ) DO
        dot +:=  v1[i]*v2[i];
    END_WHILE
END

